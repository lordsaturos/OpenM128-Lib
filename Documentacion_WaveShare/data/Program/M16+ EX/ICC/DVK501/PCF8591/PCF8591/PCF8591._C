#include <iom48v.h>

#define WR_DADR		0x90	//write device-address
#define RD_DADR		0x91	//read device-address
#include "D:\ICC_H\PCF8591.H"

#define DISP_DDR	DDRD
#define DISP_PORT	PORTD

/*--------------------------------------------------------------------

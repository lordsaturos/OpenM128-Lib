void errDisp()				
{
 	DISP_PORT = 0X55;
	delay50ms(4);
	DISP_PORT = 0X00;
	delay50ms(4);
	DISP_PORT = 0XAA;
	delay50ms(4);
	DISP_PORT = 0X00;
	delay50ms(4);
}  
/*--------------------------------------------------------------------

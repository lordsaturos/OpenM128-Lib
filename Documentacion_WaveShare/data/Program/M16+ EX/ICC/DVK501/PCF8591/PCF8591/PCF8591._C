void main()
{
	unsigned char DAval=0;
	unsigned char pGetDat;	
    TWBR = 0X12;
	DISP_DDR = 0XFF;   	     	
	while(1)
	{
		PCF8591_getAD(MODE0,CHNL0,&pGetDat);
		DISP_PORT = pGetDat;
		PCF8591_setDA(DAval++);
		delay50ms(1);
	}
}

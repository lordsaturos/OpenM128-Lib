/*01010101010101010101010101010101010101010101010101010101010101010101
----------------------------------------------------------------------
硬件连接： 	  DVK500				 STK162+
				VCC		---------	  VCC
				GND		---------	  GND
				RST		---------	  PB2
				WP		---------	  PB3		
				CS		---------	  PB4
				SI		---------	  PB5
				SO		---------	  PB6
				SCK		---------	  PB7
				
		 	  DVK500				 STK162+
				CS		---------	  VCC
				PSB	    ---------	  GND
				SID		---------	  PB5
				CLK		---------	  PB7
----------------------------------------------------------------------
实验内容：
把256个数据写入dataflash缓存器1，再读出，使用LCD12864观测是否与写入一致。
由于其命令较多，这里不作详细介绍，其它读写方式可参照本示例程序
---------------------------------------------------------------------
----------------------------------------------------------------------
注意事项： 
（1）若有加载库函数，请将光盘根目录下的“库函数”下的“ICC_H”文件夹拷到D盘
（2）请详细阅读“使用必读”及相关资料。
----------------------------------------------------------------------
10101010101010101010101010101010101010101010101010101010101010101010*/
#include <iom162v.h>
#define NO_INCLUDE_I2C_H 1
#include "D:\ICC_H\CmmICC.H"
#include "D:\ICC_H\LCD12864_ST7920_M48.H"

#include "D:\ICC_H\AT45DB161.H"
void port_init(void)
{
    PORTA = 0x00;
    DDRA  = 0xff;
    PORTB = 0xff;
    DDRB  = 0xbf;
    PORTC = 0x00;
    DDRC  = 0xff;
    PORTD = 0x00;
    DDRD  = 0xff;   
}


void main(void)
{	
	uint i;
	uchar tmp[256];
	DDRA=0xFF;

	 port_init();
    spi_init();  
    sbi(DDRB,3);
	 cbi(PORTB,3); //屏蔽液晶
    PORTB&=0xfb;      //PB2为低        rst
    delay50ms(1); 
    //PORTB|=0x08;	    //PB3为高        wp
    //PORTB|=0x04;     //  //PB2为高        rst	           
    for(i=0;i<256;i++)
    {  
        PORTB&=0xef;	   //PB4为低      cs
        write_buffer(i,i);	    //把256个数据写入dataflash缓存器 
    	PORTB|=0x10;        //  PB4为高     cs
		delay50us(10);
    }                                 
    delay50ms(2);                   
   	for(i=0;i<256;i++)           //从dataflash缓存器把256个数据读出
	{	
    	PORTB&=0xef;	
		tmp[i]=read_buffer(i);   
        PORTB|=0x10;	
		delay50us(10);
	}    
	   
    PORTB&=0xf7;
	
	sbi(PORTB,3); //开液晶
	lcd_init();
	lcd_clr();
	lcd_puts(1,1,"AT45DBX-LCD12864");
	lcd_puts(2,1,"FLASH   液晶显示");
	lcd_puts(3,1,"内容:");
	
	for(i=0;i<256;i++)
	{
	    lcd_putd(3,5,tmp[i],1);  //将刚刚从FLASH内读到的内容显示出来
		delay50ms(20); //延时1秒
	}
	
	while(1);
}
		SET_PL;
		CLR_PL;
		SET_PL;
		
		
	lcd_init();
	lcd_clr();
	lcd_puts(1,1,"74LS165-LCD12864");
	lcd_puts(2,1,"ת  Һʾ");
	lcd_puts(3,1,":");
	while(1)
   {
   i = getDat();

#include <iom128v.h>

#define WR_DADR		0xA2
#define RD_DADR		0xA3
#include "D:\ICC_H\PCF8563.H"

#define DISP_DDR	DDRA
#define DISP_PORT	PORTA

/*--------------------------------------------------------------------
函数全称：
函数功能：
注意事项：
提示说明：
输    入：
返    回：
--------------------------------------------------------------------*/
void errDisp()	  	   	//错误显示
{
 	DISP_PORT = 0XAA;
	delay50ms(2);
	DISP_PORT = 0X00;
	delay50ms(2);
 	DISP_PORT = 0X55;
	delay50ms(2);
	DISP_PORT = 0X00;
	delay50ms(2);
}
/*--------------------------------------------------------------------
函数全称：
函数功能：
注意事项：
提示说明：假设系统时钟为16M，则TWI波特率=CLK/(16+2*(TWBR)*4)=400K
输    入：
返    回：
--------------------------------------------------------------------*/
void twi_init()	 	 	//TWI(I2C)初始化
{
	TWBR = 0X03;		//设置TWI波特率  
	TWSR &= 0XFC;		//设置TWI预分频 为 1
}
/*--------------------------------------------------------------------
函数全称：
函数功能：
注意事项：
提示说明：
输    入：
返    回：
--------------------------------------------------------------------*/
void main()
{
	uint8 time[3]={0,1,2};
	
	DISP_DDR = 0XFF;
	twi_init();	
	PCF8563_init();	
	PCF8563_setTime(9,32,7); 
	
	while(1)
	{	
		PCF8563_getTime(time);
		DISP_PORT = time[0];
	}
}